{
    "name": "Anywhere Bing AI",
    "version": "1.0.2",
    "description": "Anywhere You Can chat Bing AI 모든 브라우저에서 Bing AI가 가능합니다.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
		"storage",
		"<all_urls>",
		"declarativeNetRequestWithHostAccess"
    ],
    "icons": {
        "48": "icon-48.png"
    },
    "background": {
        "scripts": ["UA.js"]
    },
	"declarative_net_request": {
    "rule_resources": [
      {
        "id": "1",
        "enabled": true,
        "path": "header.json"
      }
    ]
  },
    "manifest_version": 2
}
